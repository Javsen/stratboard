---
import Layout from '@/layouts/Layout.astro'
import StratBoard from '@/components/StratBoard.astro'
---

<Layout title="M5S">
  <div class="flex h-screen w-screen items-center justify-center">
    <StratBoard key="stratboard" />
  </div>
</Layout>

<script>
  import { listenKeys } from 'nanostores'
  import { Assets, Container, Graphics, Sprite } from 'pixi.js'

  import { getScale, YmToPx, YmToPxMap } from '@/pixi/scale'
  import { $stratBoards } from '@/stores/stratBoards'

  import { Role } from '../../../../pixi/role'

  import floor_img from '/assets/07/m7s/floor_p1_1@3x.png?url'
  import vfx_fan_img from '/assets/fan/360_r20@3x.png?url'

  const name = 'pollen_solution_case_2'

  listenKeys($stratBoards, ['stratboard'], async (stratBoards) => {
    const app = stratBoards.stratboard

    const container = new Container()
    container.position.set(app.screen.width / 2, app.screen.height / 2)
    app.stage.addChild(container)

    const floorTexture = await Assets.load(floor_img)
    const floor = Sprite.from(floorTexture)
    floor.anchor.set(0.5, 0.5)
    floor.scale.set(getScale())
    container.addChild(floor)

    const aoeParams: { x: number; y: number }[] = [
      { x: 16.5, y: 5.5 },
      { x: -16.5, y: -5.5 },
      { x: -5.5, y: 16.5 },
      { x: 5.5, y: -16.5 },
      { x: 16.5, y: -5.5 },
      { x: -16.5, y: 5.5 },
      { x: -5.5, y: -16.5 },
      { x: 5.5, y: 16.5 },
      { x: 5.5, y: -5.5 },
      { x: -5.5, y: 5.5 },
      { x: -16.5, y: -16.5 },
      { x: 16.5, y: 16.5 },
    ]
    const vfx_fan_Texture = await Assets.load(vfx_fan_img)
    aoeParams.forEach((r) => {
      const sprite = new Sprite(vfx_fan_Texture)
      sprite.anchor.set(0.5, 0.5)
      sprite.scale.set((getScale() * 8) / 20)
      sprite.position.set(r.x * YmToPx, r.y * YmToPx)
      container.addChild(sprite)
    })

    const squareMask = new Graphics()
    const width = 40 * YmToPx
    squareMask.rect(-width / 2 + 0.01 * YmToPxMap[50], -width / 2 + 0.01 * YmToPxMap[50], width, width)
    squareMask.fill({ color: 'white' })
    container.mask = squareMask
    container.addChild(squareMask)

    // 近战组
    const MT = new Role('tank', 'MT')
    MT.scale.set(0.4)
    MT.position.set(4.25 * YmToPx, 4 * YmToPx)
    container.addChild(MT)
    const ST = new Role('tank', 'ST')
    ST.scale.set(0.4)
    ST.position.set(6.75 * YmToPx, 4 * YmToPx)
    container.addChild(ST)
    const D1 = new Role('melee', 'D1')
    D1.scale.set(0.4)
    D1.position.set(4.25 * YmToPx, 7 * YmToPx)
    container.addChild(D1)
    const D2 = new Role('dps', 'D2')
    D2.scale.set(0.4)
    D2.position.set(6.75 * YmToPx, 7 * YmToPx)
    container.addChild(D2)

    // D3D4
    const D3 = new Role('ranged', 'D3')
    D3.scale.set(0.4)
    D3.position.set(15 * YmToPx, -16 * YmToPx)
    container.addChild(D3)
    const D4 = new Role('magic', 'D4')
    D4.scale.set(0.4)
    D4.position.set(17.5 * YmToPx, -16 * YmToPx)
    container.addChild(D4)

    // H1H2
    const H1 = new Role('healer', 'H1')
    H1.scale.set(0.4)
    H1.position.set(-17.5 * YmToPx, 16 * YmToPx)
    container.addChild(H1)
    const H2 = new Role('healer', 'H2')
    H2.scale.set(0.4)
    H2.position.set(-15 * YmToPx, 16 * YmToPx)
    container.addChild(H2)

    // take screenshot
    await new Promise((resolve) => setTimeout(resolve, 1000))
    const url = await app.renderer.extract.base64(app.stage)
    const screenshot = document.createElement('a')
    document.body.append(screenshot)
    screenshot.style.position = 'fixed'
    screenshot.style.top = '20px'
    screenshot.style.right = '20px'
    screenshot.download = name
    screenshot.href = url
    const image = new Image()
    image.width = app.screen.width / 4
    image.src = url
    screenshot.innerHTML = image.outerHTML
  })
</script>
